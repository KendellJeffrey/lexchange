
<div class="container">
  <div class="text-center" id="blue">

    <h1>Launguage Exchange !</h1>

    <h2>Looking for english speakers!</h2>

    <ul>
      {{#each posts}}
        {{#unless native}}
          {{> posts/post-block native=true}}
        {{/unless}}
      {{/each}}
    </ul>
    <hr>

    <h2>Looking for japanese speakers</h2>

    <ul>
      {{#each posts}}
        {{#if native}}
          {{> posts/post-block native=false}}
        {{/if}}
      {{/each}}
    </ul>
    <hr>

    <h2>Add a Post</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Post name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="native">Select one:</label><br>
        <input type="radio" name="native" value="1" checked> Looking for japanese speakers<br>
        <input type="radio" name="native" value="0"> Looking for english speakers
      </div>

      <button class="button" type="submit">Add Post</button>
    </form>

  </div>
</div>
